<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        style="@style/Style_Match"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/id_head_title1"
            style="@style/Style_Wrap"
            android:paddingTop="80dp"
            android:text="圆"
            android:textColor="@color/col_light"
            android:textSize="@dimen/ds_head_title_txsize" />

        <TextView
            android:id="@+id/id_head_title2"
            style="@style/Style_Wrap"
            android:paddingTop="80dp"
            android:text="周"
            android:textColor="@color/col_light"
            android:textSize="@dimen/ds_head_title_txsize" />

        <TextView
            android:id="@+id/id_head_title3"
            style="@style/Style_Wrap"
            android:paddingTop="80dp"
            android:text="率"
            android:textColor="@color/col_light"
            android:textSize="@dimen/ds_head_title_txsize" />

        <TextView
            android:id="@+id/id_head_title4"
            style="@style/Style_Wrap"
            android:paddingTop="80dp"
            android:text="诗"
            android:textColor="@color/col_light"
            android:textSize="@dimen/ds_head_title_txsize" />

        <TextView
            android:id="@+id/id_head_title5"
            style="@style/Style_Wrap"
            android:paddingTop="80dp"
            android:text="歌"
            android:textColor="@color/col_light"
            android:textSize="@dimen/ds_head_title_txsize" />
    </LinearLayout>

</FrameLayout>