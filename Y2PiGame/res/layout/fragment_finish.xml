<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_layout_game_finish"
    style="@style/Style_Match"
    android:clickable="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:background="@color/col_text_dark_tran"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            style="@style/Style_Wrap"
            android:text="恭喜,您已通关!"
            android:textColor="@color/col_light"
            android:textSize="50sp" />

        <TextView
            style="@style/Style_Wrap"
            android:text="等待通往火星吧"
            android:textColor="@color/col_text_light"
            android:textSize="40sp" />
    </LinearLayout>

</FrameLayout>